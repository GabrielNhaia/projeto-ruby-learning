<div class="container my-5">
  <%= link_to "← Voltar", articles_path, class: "btn btn-secondary mb-4" %>

  <h1 class="display-4 mb-4"><%= @article.title %></h1>

  <p class="lead"><%= @article.body %></p>

  <% if @article.image.attached? %>
    <%= image_tag @article.image.variant(resize_to_limit: [400, 400]) %>
  <% end %>

  <h2 class="mt-5">Comentários</h2>
  <div class="mb-4">
    <%= render @article.comments %>
  </div>

  <h2>Adicionar um comentário:</h2>
  <%= render 'comments/form' %>

  <div class="mt-4">
    <%= link_to "Editar", edit_article_path(@article), class: "btn btn-primary" %>
    <%= link_to "Deletar", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-danger ms-2" %>
  </div>
</div>
