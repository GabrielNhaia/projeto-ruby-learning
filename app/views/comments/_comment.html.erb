<% unless comment.archived? %>
  <div class="card mb-3">
    <div class="card-body">
      <p>
        <strong>Usuário:</strong> <%= comment.commenter %>
      </p>
      <p>
        <strong>Comentário:</strong> <%= comment.body %>
      </p>
      <p>
        <%= link_to 'Excluir Comentário', 
            article_comment_path(article_id: @article.id, id: comment.id), 
            method: :delete, class: "btn btn-danger" ,data: { confirm: 'Tem certeza?' }
        %>
      </p>
    </div>
  </div>
<% end %>
